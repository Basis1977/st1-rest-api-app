<!DOCTYPE html>
<html lang="en">
    <head>
        {{> style}}
        <link href="stylesheets/jquery.dataTables.min.css" type="text/css" rel="stylesheet"/>
        <link href="stylesheets/buttons.dataTables.min.css" type="text/css" rel="stylesheet"/>
        <link href="https://cdn.datatables.net/responsive/2.2.0/css/responsive.dataTables.min.css" type="text/css" rel="stylesheet"/>
        <link rel="stylesheet" href="stylesheets/bootstrapValidator.min.css" /> 
        <link rel="stylesheet" href="stylesheets/select2.min.css"/>
        <link rel="stylesheet" href="stylesheets/select2-bootstrap.css"/>
        {{> js}}
        <script src="javascripts/application.js" type="text/javascript"></script>
    </head>
    <body>
        {{> header}}
        {{> home}}
        {{> loadingModal}}
        {{> protOrgListModal}}
        {{> footer}}
        <script type="text/javascript">
            $("#bs-example-navbar-collapse-1").find("ul li").removeClass('active')
            $("#bs-example-navbar-collapse-1").find("ul li:nth-child(1)").addClass('active')
  
            $("#loadingDialog").modal('show');
        </script>
        <script src="javascripts/select2.min.js"></script>
        <script src="javascripts/jquery.dataTables.min.js" type="text/javascript"></script>
        <script src="javascripts/dataTables.buttons.min.js" type="text/javascript"></script>
        <script src="javascripts/jszip.min.js" type="text/javascript"></script>
        <script src="javascripts/pdfmake.min.js" type="text/javascript"></script>
        <script src="javascripts/vfs_fonts.js" type="text/javascript"></script>
        <script src="javascripts/buttons.html5.min.js" type="text/javascript"></script>
        <script src="javascripts/buttons.print.min.js" type="text/javascript"></script>
        <script src="javascripts/buttons.colVis.min.js" type="text/javascript"></script>
        <script type="text/javascript" src="javascripts/bootstrapValidator.min.js"></script>
        <script type="text/javascript" src="javascripts/home.js"></script>
        <script type="text/javascript">
            ApplicationUtil.makeAjaxCall("http://localhost:3000/organism/list", "GET", {}, "application/json", "json", "", "", function(){
                $("#txtOrgNameDropDownPhyloProfile").select2({
                  placeholder: "All Organisms (Default)",
                  allowClear: true,
                  dropdownAutoWidth : true
                });

                $("#txtOrgNameDropDownIntProfile").select2({
                  placeholder: "All Organisms (Default)",
                  allowClear: true,
                  dropdownAutoWidth : true
                });            

                $("#txtOrgNameDropDownPathwayProfile").select2({
                  placeholder: "All Organisms (Default)",
                  allowClear: true,
                  dropdownAutoWidth : true
                });

                $("#txtOrgNameDropDownPhyloProfile").next().css("width","388px");
                $("#txtOrgNameDropDownIntProfile").next().css("width","388px");
                $("#txtOrgNameDropDownPathwayProfile").next().css("width","388px");            
                $("#loadingDialog").modal('hide');
            });
        </script>
    </body>
</html>
